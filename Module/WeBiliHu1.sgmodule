#!name=115 Wechat Bilibili & Zhihu APPs Customize
#!desc=Four in One
#!system=ios

[Script]
Wechat.js = script-path=https://raw.githubusercontent.com/NobyDa/Script/master/QuantumultX/File/Wechat.js,script-update-interval=0,type=http-response,pattern=^https?:\/\/mp\.weixin\.qq\.com/mp/getappmsgad
115lx.js = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/wubulaba/surgescript/master/Script/115lx.js,script-update-interval=0,type=http-response,pattern=^https?:\/\/(webapi.|)115\.com\/(lx.*|user\/check_sign)
Zhihu.js = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/wubulaba/surgescript/master/Script/Zhihu.js,script-update-interval=0,type=http-response,pattern="^https?:\/\/(api|www)\.zhihu\.com\/(moments(\/recommend)?\?(action|feed_type)|topstory\/recommend|.*\/questions|market\/header|people|appview\/(v2|p)\/(answer\/)?\d{1,10}\?no\_image\=false(\&article\_fixed\_bottom\=1)?\&X\-SUGER\=)"
Bilibili.js = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/wubulaba/surgescript/master/Script/Bilibili.js,script-update-interval=0,type=http-response,pattern=^https?:\/\/ap(i|p).(live.)?bilibili.com\/x(live)?\/(resource\/show\/tab|v2\/(reply\/main|view\/material|account\/(mine|teenagers\/status)|view|feed\/index|show\/popular\/index|rank)|app-room/v1/index/getInfoByRoom)\?access_key

[MITM]
hostname = %APPEND% webapi.115.com, mp.weixin.qq.com, www.zhihu.com, api.zhihu.com, api.bilibili.com, app.bilibili.com, api.live.bilibili.com
